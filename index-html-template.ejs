  </form>

  <style>
    ul {
      padding: 0;
    }

    li {
      display: flex;
    }

    li span {
      width: 150px;
      word-break: break-all;
    }

    img {
      height: 20px;
      margin-left: 8px;
      cursor: pointer;
    }

    input {
      width: 150px;
      margin-right: 8px;
    }

    input[type='checkbox'] {
      width: auto;
    }
  </style>

