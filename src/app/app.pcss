@import "vars.pcss";

html {
  font-size: 100%;
}

/* Safari does not like REM unit in media query */
@media (max-width: 60em) {
  html {
    font-size: 80%;
  }
}

/* Gives error? */
/* html {
  font-size: calc(1em + 1vw);
} */

body {
  background-color: var(--colour-background);
  color: var(--colour-foreground);
  font-family: sans-serif;
}

#app {
  max-width: 50rem;
  margin: 0 auto;
  padding: 1.5rem 1rem;

  & h1,
  & h2 {
    color: var(--colour-heading);
  }
}
