@import "vars.pcss";

body {
  background-color: #444;
  color: #ddd;
  font-family: sans;
}

body,
section {
  width: 50%;
  margin: 0 auto;

  & h1,
  & h2 {
    color: var(--color-heading);
  }
}

ul {
  padding: 0;
}

li {
  display: flex;
}

li span {
  width: 150px;
  word-break: break-all;
}

img {
  height: 20px;
  margin-left: 8px;
  cursor: pointer;
}

input {
  width: 150px;
  margin-right: 8px;
}

input[type="checkbox"] {
  width: auto;
}
